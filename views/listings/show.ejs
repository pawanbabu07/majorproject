<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <p class="card-text"><b>
                            <%=listing.title %>
                        </b>
                </h3>
            </div>
            <div class="card col-6 offset-3">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">Owned by: <i><%= listing.owner.username %></i></p>
                    <p class="card-text"></p><%=listing.description %></p>
                        <p class="card-text"></p>Price: &#8377;<%=listing.price.toLocaleString('en-In') %>/night</p>
                            <p class="card-text"></p>Location: <%=listing.location %></p>
                                <p class="card-text"></p>Country: <%=listing.country %></p>
                                    </p>
                </div>
            </div>
            <br><% if(currUser && currUser._id.equals(listing.owner._id)){ %>
            <div class="col-8 offset-3 mb-3">
                <div class="btns">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-2 offste-3 edit-btn">Edit</a>

                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark offste-5 delete-btn">Delete</button>
                    </form>
                </div>
            </div>
            <% } %>
            <hr>
            <div class="col-8 offset-3 mb-3">
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" min="1" max="5" name="reviews[rating]" class="form-range">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="reviews[comment]" id="comment" cols="70" rows="3" class="form-control "
                            required></textarea>
                        <div class="invalid-feedback">
                            Please add some comments for review
                        </div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <hr />
                <h4>All Reviews</h4>
                <ul>
                    <% for(view of listing.reviews){ %>
                        <div class="viewCard mb-3 col-8 ms-5 "
                            style="border: 1px,solid,rgb(81, 81, 81); border-radius:10px;">
                            <div class="card col-5 ms-3 mb-3">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-body-secondary">
                                        <%=view.rating%>Stars
                                    </h6>
                                    <p class="card-text">
                                        <%= view.comment %>
                                    </p>
                                    <form class="mb-3"
                                        action="/listings/<%= listing.id %>/reviews/<%= view._id %>?_method=DELETE"
                                        method="POST">
                                        <button class="btn btn-5m btn-dark">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </ul>
            </div>
        </div>
    </body>